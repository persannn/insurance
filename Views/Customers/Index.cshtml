@model IEnumerable<Insurance_Final_Version.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Index";
    bool wasAdded = ViewBag.WasAdded;
    bool wasDeleted = ViewBag.WasDeleted;

    if(wasAdded)
    {
        <div class="alert alert-success alert-dismissable fade show" role="alert">
            <P><strong>Customer was successfully added to the database.</strong></P>
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    if(wasDeleted)
    {
        <div class="alert alert-warning alert-dismissable fade show" role="alert">
            <P><strong>Customer was successfully removed from the database.</strong></P>
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
}

<h1>List of customers</h1>

<p class="justify-content-center">
    <a type="button" class="btn btn-primary" asp-action="Create">New Customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                <a type="button" class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
