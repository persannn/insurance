@model IEnumerable<Insurance_Final_Version.Models.InsuranceViewModel>

@{
    ViewData["Title"] = "Customer Insurances";
}

<h1>Customer's Insurances</h1>
<br>
<p class="justify-content-center">
    <a type="button" class="btn btn-primary" asp-action="Create" asp-route-customerid="@ViewData["CustomerId"]">Add Insurance</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InsuranceValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceValue)
            </td>
            <td>
                <a type="button" class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a type="button" class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
