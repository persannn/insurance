@model Insurance_Final_Version.Models.InsuranceViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Insurance</h1>

<h3>Are you sure you want to delete this insurance?</h3>
<div>
    <h4>Insurance to be deleted:</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InsuranceValue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InsuranceValue)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
